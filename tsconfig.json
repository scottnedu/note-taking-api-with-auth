{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": "./dist", // Output files to the `dist` folder
    "rootDir": "./src", // Source files are in the `src` folder
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"], // Include all files in the `src` folder
  "exclude": ["node_modules"]
}